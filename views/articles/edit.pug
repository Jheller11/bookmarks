extends ../layout.pug

block content
    .card
        .card-body
            h4.card-title Edit Article:
            form(method="POST" action=`/articles/${article.id}?_method=PUT`)
                .form-group
                    label(for='url') URL:  
                    input.form-control(type='text' name='url' value=`${article.url}` required)
                .form-group
                    label(for='title') Title:
                    input.form-control(type='text' name='title' value=`${article.title}` required)
                .row
                    .col
                        label(for='tags') Tags:
                    .col
                        input.form-control(type='text' name='tags' value=`${article.tags[0] !== 'undefined' ? article.tags[2] : ''}`)
                    .col
                        input.form-control(type='text' name='tags' value=`${article.tags[1] !== 'undefined' ? article.tags[2] : ''}`)
                    .col
                        input.form-control(type='text' name='tags' value=`${article.tags[2] !== 'undefined' ? article.tags[2] : ''}`)
                    .col
                        input.form-control(type='text' name='tags' value=`${article.tags[3] !== 'undefined' ? article.tags[2] : ''}`)
                    .col
                        input.form-control(type='text' name='tags' value=`${article.tags[4] !== 'undefined' ? article.tags[2] : ''}`)
                .form-group
                    label(for='notes') Notes:
                    input.form-control(type='textarea' name='notes' value=`${article.notes}`)
                button.btn.btn-outline-dark(type="submit") Save Changes
                button.btn.btn-outline-dark(type="reset") Reset


