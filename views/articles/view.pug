extends ../layout.pug

block content
    h4 #{article.title}
    a(href=`${article.url}`) View 
        i.fa.fa-external-link-alt
    h6 Created By: #{article.createdBy}
    h6 Date Added: #{article.created}
    ul.tag-list
    h6 Tags:
        each tag in article.tags
            li #{tag}
    h6 Notes:
    div #{article.notes}
    .nav
        a.nav-link(href=`/articles/edit/${article.id}`) Edit
        if (article.read)
            form(method='POST' action=`/articles/unread/${article.id}?_method=PUT`)
                button.btn.nav-link(type='submit') Mark as Unread
        else
            form(method='POST' action=`/articles/read/${article.id}?_method=PUT`)
                button.btn.nav-link(type='submit') Mark as Read            
        form(method='POST' action=`/articles/${article.id}?_method=DELETE`)
            button.btn.nav-link(type='submit') Delete
  
